# Auto detect text files and perform LF normalization
* text=auto

# Shell scripts should always use LF
*.sh text eol=lf

# Batch files should always use CRLF
*.bat text eol=crlf

# Python files
*.py text eol=lf
*.pyw text eol=lf

# JavaScript/Node files
*.js text eol=lf
*.jsx text eol=lf
*.json text eol=lf

# Config files
*.yaml text eol=lf
*.yml text eol=lf
*.ini text eol=lf
*.conf text eol=lf
.env* text eol=lf

# Documentation
*.md text eol=lf
*.txt text eol=lf

# Docker files
Dockerfile text eol=lf
docker-compose*.yml text eol=lf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.svg binary
*.joblib binary
*.pkl binary
*.db binary
*.sqlite binary
